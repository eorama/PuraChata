---
import Layout from "../layouts/Layout.astro";
import { Section } from "@/components/ui/Section";
import { Button } from "@/components/ui/Button";
import { FiCompass } from "react-icons/fi";
---

<Layout title="404 - Página no encontrada | PuraChata Ecolodge">
    <div class="min-h-[80vh] flex flex-col justify-center pt-24 text-center">
        <Section container>
            <div class="max-w-2xl mx-auto space-y-8">
                <div class="flex justify-center">
                    <div
                        class="bg-[var(--color-secondary)]/30 p-6 rounded-full text-[var(--color-primary)] text-6xl animate-pulse"
                    >
                        <FiCompass />
                    </div>
                </div>

                <h1
                    class="text-6xl md:text-8xl font-serif text-[var(--color-primary)] font-bold"
                >
                    404
                </h1>

                <h2 class="text-2xl md:text-3xl font-serif text-gray-800">
                    Página no encontrada
                </h2>

                <p class="text-xl text-gray-600 max-w-lg mx-auto">
                    Parece que te has perdido en la selva. La página que buscas
                    no existe o ha sido movida.
                </p>

                <div class="pt-8">
                    <a href="/">
                        <Button size="lg" className="shadow-xl">
                            Volver al Sendero (Inicio)
                        </Button>
                    </a>
                </div>
            </div>
        </Section>
    </div>
</Layout>
