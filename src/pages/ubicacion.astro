---
import Layout from "../layouts/Layout.astro";
import Section from "@/components/ui/Section.astro";
import Button from "@/components/ui/Button.astro";
import { FiMapPin, FiClock, FiNavigation, FiInfo } from "react-icons/fi";

const safeBase = import.meta.env.BASE_URL.endsWith("/")
    ? import.meta.env.BASE_URL
    : import.meta.env.BASE_URL + "/";
---

<Layout title="Ubicación y Cómo Llegar | PuraChata Ecolodge">
    <div class="pt-24 pb-20">
        {/* Hero Simple */}
        <div class="bg-[var(--color-primary)] py-16 text-white text-center">
            <div class="container mx-auto px-4">
                <h1 class="text-4xl md:text-5xl font-serif font-bold mb-4">
                    Tu Viaje a la Amazonía
                </h1>
                <p class="text-xl opacity-90 max-w-2xl mx-auto">
                    Guía detallada para llegar a Pura Chata Ecolodge
                </p>
            </div>
        </div>

        {/* Section 1: Flight Info */}
        <Section container className="py-16">
            <div class="grid md:grid-cols-2 gap-12 items-center">
                <div
                    class="relative rounded-2xl overflow-hidden shadow-xl aspect-video bg-gray-100 group"
                >
                    {/* Placeholder for Peru Map */}
                    <img
                        src="https://images.unsplash.com/photo-1587595431973-160d0d94add1?q=80&w=2676&auto=format&fit=crop"
                        alt="Mapa Perú Vuelo"
                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                    />
                    <div
                        class="absolute inset-0 bg-black/20 flex items-center justify-center"
                    >
                        <span
                            class="bg-white/90 text-gray-800 px-4 py-2 rounded-full text-sm font-bold shadow-lg"
                        >
                            Lima ✈ Iquitos
                        </span>
                    </div>
                </div>

                <div class="space-y-6">
                    <h2
                        class="text-3xl font-serif text-[var(--color-primary)] flex items-center gap-3"
                    >
                        <FiNavigation /> Vuelo a Iquitos
                    </h2>

                    <div
                        class="bg-blue-50 p-6 rounded-xl border border-blue-100"
                    >
                        <div class="flex items-start gap-4 mb-4">
                            <FiClock
                                className="text-2xl text-[var(--color-primary)] mt-1"
                            />
                            <div>
                                <h4 class="font-bold text-lg">
                                    Duración del Vuelo
                                </h4>
                                <p class="text-gray-600">
                                    Aproximadamente 1 hora y 45 minutos desde
                                    Lima.
                                </p>
                            </div>
                        </div>
                        <hr class="border-blue-100 my-4" />
                        <div>
                            <h4 class="font-bold text-lg mb-2">
                                Aerolíneas Disponibles
                            </h4>
                            <ul class="flex flex-wrap gap-4">
                                <li
                                    class="bg-white px-3 py-1 rounded border text-sm font-medium text-gray-600"
                                >
                                    LATAM
                                </li>
                                <li
                                    class="bg-white px-3 py-1 rounded border text-sm font-medium text-gray-600"
                                >
                                    Star Perú
                                </li>
                                <li
                                    class="bg-white px-3 py-1 rounded border text-sm font-medium text-gray-600"
                                >
                                    Sky Airline
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div
                        class="bg-yellow-50 p-6 rounded-xl border border-yellow-100"
                    >
                        <div class="flex items-start gap-3">
                            <FiInfo className="text-2xl text-yellow-600 mt-1" />
                            <div>
                                <h4 class="font-bold text-lg text-yellow-800">
                                    Nuestra Recomendación
                                </h4>
                                <p class="text-gray-700 text-sm">
                                    Sugerimos reservar vuelos que lleguen a
                                    Iquitos <strong
                                        >antes de las 12:00 PM</strong
                                    > para aprovechar las actividades del primer día
                                    y disfrutar del almuerzo de bienvenida.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </Section>

        {/* Section 2: Arrival to Lodge (Video & Address) */}
        <Section container className="py-16 bg-gray-50">
            <div class="grid md:grid-cols-2 gap-12 items-center">
                <div class="order-2 md:order-1 space-y-6">
                    <h2
                        class="text-3xl font-serif text-[var(--color-primary)] flex items-center gap-3"
                    >
                        <FiMapPin /> Llegada al Ecolodge
                    </h2>

                    <div class="prose text-gray-600">
                        <p class="text-lg">
                            Una vez en Iquitos, nos dirigimos hacia nuestro
                            refugio en la selva.
                        </p>
                        <div
                            class="bg-white p-6 rounded-xl shadow-sm border border-gray-200 my-6"
                        >
                            <h4
                                class="font-bold text-[var(--color-primary)] uppercase tracking-wide text-sm mb-2"
                            >
                                Dirección Exacta
                            </h4>
                            <p class="text-xl font-medium text-gray-800">
                                Carretera Iquitos - Nauta Km. 41.700
                            </p>
                            <p class="text-gray-500">
                                Centro Poblado Ex Petroleros, Loreto, Perú
                            </p>
                        </div>
                        <p>
                            Durante el trayecto de aproximadamente 45 minutos,
                            verás la transición de la ciudad a la naturaleza
                            viva. No te preocupes por el traslado, ¡nosotros
                            podemos coordinarlo todo!
                        </p>
                    </div>

                    <div class="pt-4">
                        <Button
                            href={`${safeBase}reserva`}
                            className="bg-[var(--color-primary)] text-white shadow-xl hover:scale-105 transition-transform w-full md:w-auto text-center"
                        >
                            Reservar Ahora
                        </Button>
                        <p
                            class="text-xs text-gray-400 mt-2 text-center md:text-left"
                        >
                            Te llevará al formulario de reserva oficial.
                        </p>
                    </div>
                </div>

                <div class="order-1 md:order-2">
                    <div
                        class="relative rounded-2xl overflow-hidden shadow-2xl aspect-square md:aspect-[4/5] bg-gray-900 group"
                    >
                        {/* Placeholder for Zoom-in Video */}
                        <img
                            src={safeBase + "images/hero-home.jpg"}
                            alt="Mapa acercándose al Lodge"
                            class="w-full h-full object-cover opacity-60 group-hover:scale-110 transition-transform duration-700"
                        />
                        <div
                            class="absolute inset-0 flex items-center justify-center"
                        >
                            <div
                                class="w-16 h-16 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center border-2 border-white cursor-pointer hover:bg-white/30 transition-all"
                            >
                                <div
                                    class="w-0 h-0 border-t-8 border-t-transparent border-l-12 border-l-white border-b-8 border-b-transparent ml-1"
                                >
                                </div>
                            </div>
                        </div>
                        <div
                            class="absolute bottom-0 left-0 right-0 p-6 bg-gradient-to-t from-black/80 to-transparent"
                        >
                            <p class="text-white font-medium text-center">
                                Ver recorrido en el mapa
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </Section>
    </div>
</Layout>
