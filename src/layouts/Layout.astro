---
import "../styles/global.css";
import Header from "../components/layout/Header.astro";
import Footer from "../components/layout/Footer.astro";
import "@fontsource/playfair-display";
import "@fontsource/lato";

interface Props {
	title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;
const safeBase = import.meta.env.BASE_URL.endsWith("/")
	? import.meta.env.BASE_URL
	: import.meta.env.BASE_URL + "/";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Vive una experiencia auténtica en plena selva, rodeada de naturaleza y cultura local. PuraChata Ecolodge, Iquitos, Perú."
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href={safeBase + "favicon.ico"} />
		<meta name="generator" content={Astro.generator} />
		<meta name="robots" content="noindex, nofollow" />
		<title>{title}</title>
	</head>
	<body class="flex flex-col min-h-screen font-sans antialiased">
		<Header currentPath={currentPath} />
		<main class="flex-grow">
			<slot />
		</main>
		<Footer />
	</body>
</html>
